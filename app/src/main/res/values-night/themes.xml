<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyApplication" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color (Hijau). -->
        <item name="colorPrimary">#00897B</item>
        <item name="colorPrimaryVariant">#004D40</item>
        <item name="colorOnPrimary">@android:color/white</item>

        <!-- Secondary brand color (Jika perlu digunakan untuk elemen lain). -->
        <item name="colorSecondary">#004D40</item>
        <item name="colorOnSecondary">@android:color/white</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Background untuk layar. -->
        <item name="android:windowBackground">#00897B</item>

        <!-- Warna teks umum pada layar. -->
        <item name="android:textColorPrimary">@android:color/white</item>
    </style>
</resources>
